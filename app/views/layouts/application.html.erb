<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<header>
  <h1>
    <div id="logo">
      <%= link_to "Welcome to my blog", root_url, :id => 'logo' %>
    </div>

  </h1>

</header>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<aside>
place for search and tag cloud
</aside>

<%= yield %>


<footer>
      <div id="admin-login">
      <% if admin_signed_in? %>
      Admin
      <%= current_admin.email %>
      <%= link_to "logout", destroy_admin_session_path %>
      <% else %>
      [development] admin
      <%= link_to "login", new_admin_session_path %>
      <% end %>
    </div>
  &#169; 2011
<%= render 'layouts/social-links' %>
</footer>

</body>
</html>
