<div class="content">
Total posts: <%= @posts_count %>
<%= link_to "Add post", new_post_path, :id => 'new_post' %>
<br>
<%= paginate @posts %>
<% @posts.each do |post| %>
<div class="post">
  <div class="post-title">
     <%= post.title %>
  </div>
  <%= post.body %>
  <br>
  <%= post.updated_at %>
</div>
<div class="post-links">
  <%= link_to "Read", post, :id => "#{post.id}-read" %>
  <% if admin_signed_in? %>
    <%= link_to "Edit", edit_post_path(post), :id => "#{post.id}-edit" %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
  <% end %>
</div>
<% end %>
</div>
